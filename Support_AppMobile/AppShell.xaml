<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Support_AppMobile.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Support_AppMobile"
    Shell.FlyoutBehavior="Flyout"
    Shell.TabBarIsVisible="True"
    Shell.BackgroundColor="Yellow"
    Title="Support_AppMobile">


    <Tab Title="Home">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}" 
        Route="MainPage"/>
    </Tab>

    <Tab Title="Animation">
        <ShellContent
        Title="Animation"
        ContentTemplate="{DataTemplate local:AnimationPage}" 
        Route="AnimationPage"/>
    </Tab>

    <Tab Title="MvvmInt">
        <ShellContent
        Title="MvvmInt"
        ContentTemplate="{DataTemplate local:MvvmIntPage}" 
        Route="MvvmIntPage"/>
    </Tab>

    <Tab Title="MvvmList">
        <ShellContent
        Title="MvvmList"
        ContentTemplate="{DataTemplate local:MvvmListPage}" 
        Route="MvvmListPage"/>
    </Tab>

    <Tab Title="MvvmObject">
        <ShellContent
        Title="MvvmObject"
        ContentTemplate="{DataTemplate local:MvvmObjectPage}" 
        Route="MvvmObjectPage"/>
    </Tab>
</Shell>