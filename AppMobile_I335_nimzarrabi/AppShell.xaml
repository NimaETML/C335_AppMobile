<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="AppMobile_I335_nimzarrabi.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:AppMobile_I335_nimzarrabi"
    Shell.FlyoutBehavior="Flyout"
    Title="AppMobile_I335_nimzarrabi">
    <Tab Title="Home">
        <ShellContent
        Title="Home"
        ContentTemplate="{DataTemplate local:MainPage}"
        Route="MainPage" />
    </Tab>

    <Tab Title="Layout">
        <ShellContent
        Title="Layout"
        ContentTemplate="{DataTemplate local:LayoutPage}"
        Route="LayoutPage" />
    </Tab>

    <FlyoutItem Title="FlyoutPage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
       Title="FlyoutPage"
       ContentTemplate="{DataTemplate local:FlyoutPage}"
       Route="FlyoutPage" />
    </FlyoutItem>

    <FlyoutItem Title="SecondFlyoutPage" FlyoutDisplayOptions="AsMultipleItems">
        <ShellContent
       Title="SecondFlyoutPage"
       ContentTemplate="{DataTemplate local:SecondFlyoutPage}"
       Route="SecondFlyoutPage" />
    </FlyoutItem>
</Shell>
