<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppMobile_I335_nimzarrabi.LayoutPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <Image
                Source="readme_logo.png"
                HeightRequest="185"
                Aspect="AspectFit"
                SemanticProperties.Description="Slay logo i made" />

            <Label
                Text="Layout page"
                Style="{StaticResource Headline}"
                SemanticProperties.HeadingLevel="Level1" />

            <Label
                Text="this is the layout page, it has a cool image"
                Style="{StaticResource SubHeadline}"
                SemanticProperties.HeadingLevel="Level2"
                SemanticProperties.Description="this is the layout page, it has a cool image" />

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
